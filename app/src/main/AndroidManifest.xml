<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zone.com.transitionstudy">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- WIFI权限 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseAppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TransitionActivity"></activity>
        <activity android:name=".androidfiveversion.FiveContentAcitivity"></activity>
        <activity android:name=".androidfiveversion.share.normal.FiveShareNormalAcitivty"></activity>
        <activity android:name=".androidfiveversion.share.normal.FiveShareNormal2Acitivty"></activity>
        <activity android:name=".androidfiveversion.share.list.FiveShareListAcitivty"></activity>
        <activity android:name=".androidfiveversion.share.list.SharePicAcitivity"></activity>

        <activity android:name=".androidfiveversionlib.FiveContent_LibAcitivity"></activity>
        <activity android:name=".androidfiveversionlib.share.normal.FiveShareNormal2_LibAcitivty"></activity>
        <activity android:name=".androidfiveversionlib.share.normal.FiveShareNormal_LibAcitivty"></activity>
        <activity android:name=".androidfiveversionlib.share.list.FiveShareList_LibAcitivty"></activity>
        <activity android:name=".androidfiveversionlib.share.list.SharePic_LibAcitivity"></activity>
    </application>

</manifest>